@page
@model VegApp.Pages.HistoryModel

@{
    ViewData["Title"] = "History";
}

<h1>History</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>Product</th>
            <th>
                Amount
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.eatenProduct)
        {
            <tr>

                <td>
                   
                    @Html.DisplayFor(modelItem => item.First().DateWhenEatenForDisplay)
                </td>
                <td>
                    @Html.DisplayFor(nodelItem => item.First().Product.ProductName)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.First().Amount)
                </td>
                <td>

                     
                    <a asp-page="./EditProducts" asp-route-id="@item.First().EatenProductId">Edit</a> |
                    <a asp-page="./DeleteProducts" asp-route-id="@item.First().EatenProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

