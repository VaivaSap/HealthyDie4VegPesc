@page
@model VegApp.Pages.HistoryModel

@{
    ViewData["Title"] = "History";
}

<h1>History</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>Product</th>
            <th>
                Amount
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EatenProduct)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateWhenEaten)
                </td>
                <td>
                    @Html.DisplayFor(nodelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a asp-page="./EditProducts" asp-route-id="@item.EatenProductId">Edit</a> |
                    <a asp-page="./DeleteProducts" asp-route-id="@item.EatenProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

